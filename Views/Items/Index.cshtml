@model IEnumerable<Project_WebApp.Models.Items>

@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>


<p>
    <a asp-action="create">Create New</a> &nbsp;
    <a asp-action="Edit">Edit</a> &nbsp;
    <a asp-action="Delete">Delete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
             <a asp-controller="Items" asp-action="Edit" asp-route-ItemID="@item.ItemID" asp-route-name="@item.Name" asp-route-Quantity="@item.Quantity" asp-route-Price="@item.Price">Edit</a>&nbsp;|&nbsp;
             <a asp-controller="Items" asp-action="Delete" asp-route-ItemID="@item.ItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
