@model IEnumerable<Project_WebApp.Models.Items>

@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>


<p>
    <a asp-action="create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Add New Item</a> 
    <a asp-action="GetItemByID" class="btn btn-primary"><i class="bi bi-list-ol"></i> &nbsp; Get Item By ID </a>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    <a asp-controller="Items" asp-action="Edit" asp-route-ItemID="@item.ItemID" asp-route-name="@item.Name" asp-route-Quantity="@item.Quantity" asp-route-Price="@item.Price" class="btn btn-primary"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>&nbsp;&nbsp;
                    <a asp-controller="Items" asp-action="Delete" asp-route-ItemID="@item.ItemID" class="btn btn-danger"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

